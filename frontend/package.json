{
  "name": "divan-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean:next": "node ./scripts/clean-next.js",
    "dev": "next dev --turbo",
    "dev:clean": "npm run clean:next && next dev --turbo",
    "dev:turbo": "next dev --turbo",
    "dev:turbo:clean": "npm run clean:next && next dev --turbo",
    "dev:legacy": "next dev",
    "build": "next build",
    "start": "node .next/standalone/server.js",
    "start:next": "next start",
    "lint": "cross-env NEXT_DISABLE_TS_DETECTION=1 eslint app components lib --ext ts,tsx --max-warnings=0",
    "typecheck": "tsc -p tsconfig.typecheck.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "node ./scripts/prep-e2e.js && npm run build && cross-env PLAYWRIGHT_USE_BUILD=1 playwright test",
    "perf:lighthouse": "lhci autorun --config=./lighthouserc.js",
    "perf:lighthouse:local": "lighthouse http://localhost:3000 --output=json,html --output-path=./perf-results/lighthouse-local --chrome-flags=\"--headless --no-sandbox\" --preset=desktop",
    "perf:bundle": "npm run build && node -e \"const fs=require('fs');const p='.next/static/chunks';fs.readdirSync(p).filter(f=>f.endsWith('.js')).map(f=>({name:f,size:fs.statSync(p+'/'+f).size})).sort((a,b)=>b.size-a.size).slice(0,10).forEach(f=>console.log(f.name.padEnd(50),(f.size/1024).toFixed(1)+'KB'))\"",
    "perf:bundle:analyze": "cross-env ANALYZE=true npm run build",
    "perf:inventory": "node ./scripts/perf-inventory.js",
    "perf:all": "node ./scripts/perf-run-all.js full",
    "perf:all:public": "node ./scripts/perf-run-all.js public",
    "perf:all:smoke": "node ./scripts/perf-run-all.js smoke"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.3.0",
    "@tanstack/react-query": "^5.90.5",
    "axios": "^1.13.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.554.0",
    "next": "^14.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.5",
    "socket.io-client": "^4.7.5",
    "ulidx": "^2.4.1",
    "web-vitals": "^3.5.2",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@tanstack/react-virtual": "^3.13.12",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.22",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "jsdom": "^27.0.1",
    "lighthouse": "^12.8.2",
    "playwright": "^1.43.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vitest": "^1.4.0"
  }
}
