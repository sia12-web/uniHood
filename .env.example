# ============================================
# CRITICAL SECURITY SECRETS
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# ============================================
SECRET_KEY=CHANGE_ME_TO_RANDOM_VALUE
SERVICE_SIGNING_KEY=CHANGE_ME_TO_RANDOM_VALUE
REFRESH_PEPPER=CHANGE_ME_TO_RANDOM_VALUE

# Intent signing
INTENT_SIGNING_REQUIRED=true
INTENT_ALLOWED_SKEW_SECONDS=60
INTENT_NONCE_TTL_SECONDS=600

# ============================================
# DATABASE
# ============================================
POSTGRES_PASSWORD=CHANGE_ME_TO_RANDOM_VALUE
POSTGRES_URL=postgresql://postgres:CHANGE_ME@localhost:5432/radius

# ============================================
# CORS - NO WILDCARD (*) IN PRODUCTION!
# ============================================
# Development:
CORS_ALLOW_ORIGINS=http://localhost:3000
# Production example:
# CORS_ALLOW_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# SECURITY SETTINGS
# ============================================
# MUST be 'true' in production with HTTPS
COOKIE_SECURE=false
COOKIE_SAMESITE=strict

# Environment
ENVIRONMENT=development

# ============================================
# PRODUCTION CHECKLIST
# ============================================
# [ ] Generated all secrets with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# [ ] Set COOKIE_SECURE=true
# [ ] Set CORS_ALLOW_ORIGINS to your domain(s)
# [ ] Set ENVIRONMENT=production
# [ ] Never commit .env to git!

COMPOSE_PROJECT_NAME=unihood
