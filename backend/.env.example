# Postgres / DB
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/radius

# Redis
REDIS_URL=redis://localhost:6379/0

# Secrets
SECRET_KEY=dev-secret-change-me
SERVICE_SIGNING_KEY=dev-service-signing-key-change-me
REFRESH_PEPPER=dev-refresh-pepper-change-me

# Environment
ENV=dev  # dev | canary | live

# CORS
# Comma-separated list. Use explicit origins in canary/live.
CORS_ALLOW_ORIGINS=http://localhost:3000

# Token TTLs
ACCESS_TTL_MINUTES=15
REFRESH_TTL_DAYS=30

# Cookies
COOKIE_SECURE=false         # true in canary/live behind https
COOKIE_SAMESITE=strict      # strict | lax | none
COOKIE_DOMAIN=              # e.g., .example.com in prod

# Observability
OBS_ENABLED=true
OBS_METRICS_PUBLIC=false
OBS_TRACING_ENABLED=false
OBS_ADMIN_TOKEN=  # REQUIRED in production for admin/ops endpoints
LOG_LEVEL=INFO
OTEL_EXPORTER_OTLP_ENDPOINT=

# WebAuthn / Passkeys (dev defaults)
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=Radius
WEBAUTHN_ORIGIN=http://localhost:3000

# OAuth (optional)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_MICROSOFT_CLIENT_ID=
OAUTH_REDIRECT_BASE=http://localhost:3000/auth/callback

# Moderation staff (comma-separated user IDs)
MODERATION_STAFF_IDS=
